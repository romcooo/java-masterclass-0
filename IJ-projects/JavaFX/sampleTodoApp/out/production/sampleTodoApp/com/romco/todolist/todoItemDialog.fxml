<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.romco.todolist.DialogController"
            >
    <headerText>
        We could put instructions here
    </headerText>

    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="Short description: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="descriptionTextField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Details: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="detailsTextArea" GridPane.rowIndex="1" GridPane.columnIndex="1" wrapText="true"/>

            <Label text="Due Date: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dueDateDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
